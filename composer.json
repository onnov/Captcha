{
  "name": "onnov/captcha",
  "description": "Captcha generator with the most flexible settings.",
  "type": "library",
  "keywords": ["captcha", "spam", "abuse"],
  "homepage": "https://github.com/onnov/captcha",
  "license": "MIT",
  "authors": [
    {
      "name": "onnov",
      "email": "oblnn@yandex.ru"
    }
  ],
  "require": {
    "php":">=5.6.0",
    "ext-gd": "*"
  },
  "autoload": {
    "psr-4" : {
      "Onnov\\Captcha\\" : "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Onnov\\DetectEncoding\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "phpbench/phpbench": "*",
    "phpmd/phpmd": "*",
    "phpstan/phpstan": "*",
    "phpstan/phpstan-strict-rules": "*",
    "squizlabs/php_codesniffer": "*",
    "infection/infection": "*",
    "phpcompatibility/php-compatibility": "*",
    "roave/backward-compatibility-check": "*"
  },
  "scripts": {
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "phpmd": "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
    "phpstan": "phpstan analyse src/ -c phpstan.neon --level=7 --no-progress -vvv --memory-limit=-1"
  }
}
